  <div id="image" class="hidden"><%= image_tag 'blank.gif' %></div>
  <div id="minimize" class="transBack roundFont hover"></div>

  <ul id="imageInfo" class="hidden transBack roundFont">
    <li id="pictureCaption"><%= @picture ? @picture.caption : '' %></li>
    <li id="pictureShow"><%= @picture ? @picture.show.title : '' %></li>
    <li id="pictureShowDate"><%= @picture ? @picture.show.formatted_start_date : '' %></li>
    <li id="picturePhotographer"><%= @picture ? @picture.get_photographer : '' %></li>
    <% if has_other_picture %>
      <li class="hover" id="changePicture">Change Picture</li>
    <% end %>
  </ul>

  <div id="pictureMode" class="hidden"><%= @picture_mode %></div>