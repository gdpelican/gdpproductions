<div class="showPage">
  <div class="showHeaderDates"><%= @show.start_date.strftime("%b %e").tr('0', 'O') %> - <%= @show.end_date.strftime("%b %e %Y").tr('0', 'O') %></div>
  <div class="showHeader rounded">
    <div id="mapInfo" class="showMapInfo">
      <%= @show.venue.name %><br/>
      <%= @show.venue.address.tr('0', 'O') %><br/>
    </div>
    <div class="showThumb rounded"><%= image_tag @show.thumb.url(:thumb) %></div>
    <div id="showMap" class="showMap"></div>
  </div>
  <% if !@show.pictures.empty? %>
  <div class="showGallery scroller">
    <%   @show.pictures.each do |p| %>
      <%=   link_to image_tag(p.picture.url(:thumb), :class => 'roundedNoIE'), p.picture.url, :rel  => 'prettyphoto[show]' %>
    <% end %>
  </div>
  <% end %>
  <div class="showDescription"><%= raw RedCloth.new(@show.description).to_html %></div>
</div>
