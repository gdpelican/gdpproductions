<!DOCTYPE html>
<html>
<head>
  <title>GDP <%= if @title then ' - ' + @title end %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if session[:id] %>
  <div id="loggedin"></div>
<% end %>

<div id="body">
        <div id="gdp"><%=  image_tag('GDP.gif') %></div>
	<div id="menu"><%= render :template => 'links/index' %></div>
	<div id="header"><%= @title %></div>
        <div id="content" class="scroller"><%= yield %></div>
	<div id="whatson"><%= render :template => 'whatson/index' %></div>
</div>

<div id="image" class="hidden">
	<%= if !getPicture.nil? 
            image_tag getPicture.picture.url
        end%>
</div>

</body>
</html>
